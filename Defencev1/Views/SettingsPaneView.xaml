<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Defencev1.Views.SettingsPaneView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Defencev1.ViewModels"
    xmlns:shared="clr-namespace:Defencev1.Views.Shared"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:DataType="local:SettingsViewModel"
    IsVisible="False"
    WidthRequest="250">
    <ScrollView>
        <VerticalStackLayout>
            <Grid Padding="5">
                <Label
                    Margin="10,0,0,0"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    Text="Settings" />
                <ImageButton
                    Grid.Column="1"
                    Padding="5"
                    BackgroundColor="{StaticResource Background2}"
                    Clicked="OnHideClicked"
                    HorizontalOptions="End"
                    Rotation="180"
                    Source="arrow.png"
                    WidthRequest="28" />
            </Grid>
        </VerticalStackLayout>

    </ScrollView>
</ContentView>
